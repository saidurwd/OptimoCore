@model IEnumerable<OptimoCore.Models.State>
@{
    ViewData["Title"] = "States";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">@ViewData["Title"]</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><i class="fa fa-home"></i> <a asp-action="Index" asp-controller="Home">Home</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                    <div class="card-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <a asp-controller="States" asp-action="Create" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i> NEW STATE</a>
                        </div>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="tableStates" class="table table-bordered table-striped">
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

@section Scripts{
    <script src="~/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script>
        $(function () {
            $('#tableStates').DataTable({
                pageLength: 25,
                ajax: {
                    url: '/States/Display',
                    dataSrc: '',
                },
                columnDefs: [
                    { "searchable": false, "targets": 4 }
                ],
                columns: [
                    { title: 'Country', data: 'countryId' },
                    { title: 'State Name', data: 'stateName' },
                    { title: 'Code 3', data: 'state3Code' },
                    { title: 'Code 2', data: 'state2Code' },
                    { title: 'Ordering', data: 'ordering' },
                    { title: 'Status', data: 'status' },
                    {
                        title: 'Actions',
                        "render": function (data, type, full, meta) { return '<a class="btn btn-info btn-xs" href="/States/Details/' + full.id + '"><i class="fa fa-eye"></i></a> <a class="btn btn-primary btn-xs" href="/States/Edit/' + full.id + '"><i class="fa fa-edit"></i></a> <a class="btn btn-danger btn-xs" href="/States/Delete/' + full.id + '"><i class="fa fa-trash"></i></a>'; }
                    },
                ]
            });
        });
    </script>
}
