@model IEnumerable<OptimoCore.Models.State>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CountryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StateName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State3Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State2Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ordering)
