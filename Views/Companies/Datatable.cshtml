@model IEnumerable<OptimoCore.Models.Company>

@{
    ViewData["Title"] = "Serverside Datatable - Companies";
}
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">@ViewData["Title"]</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">@ViewData["Title"]</a></li>
                    <li class="breadcrumb-item active">Company Datatable</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                    <div class="card-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <a asp-controller="Company" asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> NEW COMPANY</a>
                        </div>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="tableCompanies" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Company Name</th>
                                <th>Address</th>
                                <th>Email</th>
                                <th>Phone</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Company Name</th>
                                <th>Address</th>
                                <th>Email</th>
                                <th>Phone</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
@section Scripts{
    <script src="~/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script>

        $(function () {
            $('#tableCompanies').DataTable({
                //dataType: 'application/x-www-form-urlencoded; charset=utf-8',
                //dataType: 'application/json; charset=utf-8',
                // Design Assets
                //stateSave: true,
                //autoWidth: true,
                // ServerSide Setups
                //processing: true,
                //language: {
                //    processing: 'Processing...'
                //},
                //serverSide: true,
                // Paging Setups
                //paging: true,
                // Searching Setups
                //searching: { regex: true },
                //order: [0, "asc"],
                // Ajax Filter
                ajax: {
                    type: 'POST',
                    url: '/Companies/GetList',
                    contentType: "application/json",
                    dataType: 'json',
                    data: function (d) {
                        return JSON.stringify(d);
                    },
                    //success: function (result) {
                    //    console.log('Data received: ');
                    //    console.log(result);
                    //},
                },
                columns: [
                    { title: 'Company Name', data: 'companyName' },
                    { title: 'Address', data: 'address' },
                    { title: 'Email', data: 'email' },
                    { title: 'Phone', data: 'phone' }
                ],
                serverSide: true,
                order: [0, "asc"],
                processing: true,
                language: {
                    processing: 'Processing...'
                },
            });
        });
    </script>
}
